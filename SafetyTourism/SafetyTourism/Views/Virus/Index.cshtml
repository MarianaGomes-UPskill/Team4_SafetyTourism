@model IEnumerable<SafetyTourism.Models.Virus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VirusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="tablehover" onclick="location.href = '@Url.Action("Details", new { id=item.VirusID })'">
            <td>
                @Html.DisplayFor(modelItem => item.VirusName)
            </td>
        </tr>
}
    </tbody>
</table>
