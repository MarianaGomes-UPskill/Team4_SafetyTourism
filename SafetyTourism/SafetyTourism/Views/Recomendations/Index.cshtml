@model IEnumerable<SafetyTourism.Models.Recomendation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeoZone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)<p>days</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeoZone.GeoZoneName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecomendationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecomendationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecomendationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
