            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationID" class="control-label"></label>
                <select asp-for="DestinationID" class="form-control" asp-items="ViewBag.DestinationID"></select>
                <span asp-validation-for="DestinationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseID" class="control-label"></label>
                <select asp-for="DiseaseID" class="form-control" asp-items="ViewBag.DiseaseID"></select>
                <span asp-validation-for="DiseaseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
