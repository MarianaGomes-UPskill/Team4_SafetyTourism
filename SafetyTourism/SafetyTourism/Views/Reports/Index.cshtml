@model IEnumerable<SafetyTourism.Models.Report>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Reports</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumInfecParm"]">@Html.DisplayNameFor(model => model.NumInfected)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.CreationDate)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DiseaseSortParm"]">@Html.DisplayNameFor(model => model.Disease)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Destination)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumInfected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disease.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
